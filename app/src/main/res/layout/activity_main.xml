<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proxy Server"
        android:id="@+id/proxy_server_label"
        android:layout_marginTop="176dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/proxy_port_label"
        android:layout_alignEnd="@+id/proxy_port_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="port"
        android:id="@+id/proxy_port_label"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/proxy_server_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/proxy_port"
        android:inputType="number"
        android:layout_alignBottom="@+id/proxy_port_label"
        android:layout_toRightOf="@+id/proxy_port_label"
        android:layout_toEndOf="@+id/proxy_port_label"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:text="8888" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/proxy_server"
        android:layout_above="@+id/proxy_port"
        android:layout_alignLeft="@+id/proxy_port"
        android:layout_alignStart="@+id/proxy_port" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proxy_switcher"
        android:layout_below="@+id/proxy_port_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:src="@drawable/proxy_off" />

</RelativeLayout>
